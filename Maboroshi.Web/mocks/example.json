{
  "environments": [
    {
      "name": "default",
      "routes": [
        {
          "urlTemplate": "/api/test/",
          "httpMethod": "GET",
          "responseSelectionStrategy": "default",
          "allowResponseCaching": true,
          "responses": [
            {
              "name": "Response 1",
              "statusCode": 200,
              "body": "{\"response\": \"Hello world\"}",
              "rules": []
            }
          ]
        },
        {
          "urlTemplate": "/api/parameters/{id}",
          "httpMethod": "GET, POST",
          "responseSelectionStrategy": "default",
          "responses": [
            {
              "name": "Response 1",
              "statusCode": 200,
              "allowResponseCaching": true,
              "body": "{\"response\": \"Authorized\"}",
              "rules": [
                {
                  "type": "Header",
                  "key": "Authorization",
                  "value": "Secret",
                  "operation": "Equals",
                  "negate": false
                },
                {
                  "type": "Query",
                  "key": "Test",
                  "value": "Secret",
                  "operation": "Equals",
                  "negate": true
                }
              ]
            },
            {
              "name": "Response 2",
              "statusCode": 401,
              "body": "{\"response\": \"Not Authorized\"}",
              "allowResponseCaching": true,
              "rules": [
                {
                  "type": "Header",
                  "key": "Authorization",
                  "value": "Secret",
                  "operation": "Equals",
                  "negate": true
                }
              ]
            }
          ]
        },
        {
          "urlTemplate": "/api/template/{id?}",
          "httpMethod": "GET",
          "responseSelectionStrategy": "default",
          "responses": [
            {
              "name": "Response 1",
              "statusCode": 200,
              "body": "{\n    \"userId\": \"text\",\n    \"otherText\": 1,\n   \"upper\": \"{{ uppercase 'test' }}\",\n   \"id\": {{urlParam 'id'}}\n}",
              "rules": [],
              "allowResponseCaching": true
            }
          ]
        }
      ]
    }
  ]
}
